<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333545"
    tools:context=".Lect2">

    <Button
        android:id="@+id/HomeButtonL2"
        android:layout_width="106dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:textColor="#F4EFF0"
        android:backgroundTint="#C23833"
        android:text="Home"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.055"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/LectionButtonL2"
        android:layout_width="106dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:text="Lections"
        android:textSize="13sp"
        android:textColor="#F4EFF0"
        android:backgroundTint="#C23833"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/TaskButtonL2"
        android:layout_width="106dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:textColor="#F4EFF0"
        android:text="Tasks"
        android:textSize="13sp"
        android:backgroundTint="#C23833"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.947"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="659dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="1dp"

        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HomeButtonL2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Итак, теперь приступим к основам. Координация руки это очень важная разминка, к которой следует сразу приучить себя.Хотя как правило разминочные упражнения и трактуются как медитативные, они могут порой вызывать самые драматические эмоции у новичков"
                android:textColor="#F4EFF0"
                android:textSize="20sp"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>